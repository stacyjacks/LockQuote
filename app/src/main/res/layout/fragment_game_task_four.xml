<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_game_task_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.GameActivity"
    tools:ignore="UselessParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/taskFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="@string/taskFour"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/helpfulTextTaskFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@string/taskFourChoosePassword"
            android:textSize="18sp" />


        <RadioGroup
            android:id="@+id/multipleChoiceTaskFour"
            android:hapticFeedbackEnabled="true"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bubble_grey"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:buttonTint="@color/whiteColor"
                android:text="Choice 1"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:hapticFeedbackEnabled="true"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bubble_grey"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:buttonTint="@color/whiteColor"
                android:text="Choice 2"
                android:textSize="20sp"
                android:textColor="@color/whiteColor" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bubble_grey"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:buttonTint="@color/whiteColor"
                android:text="Choice 3"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:hapticFeedbackEnabled="true"/>

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bubble_grey"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:buttonTint="@color/whiteColor"
                android:text="Choice 4"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:hapticFeedbackEnabled="true"/>

        </RadioGroup>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/checkViewAnimation"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_rawRes="@raw/checkmarklightgreen"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <Button
            android:id="@+id/continueButtonTaskFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bubble"
            android:text="@string/continue_button_one"
            android:textColor="@color/whiteColor"
            android:textAlignment="center"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>