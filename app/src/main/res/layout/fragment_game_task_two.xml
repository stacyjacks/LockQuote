<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_game_task_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_b"
    tools:context=".ui.GameActivity">

    <TextView
        android:id="@+id/taskTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/taskTwo"
        android:paddingEnd="18dp"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/task_number_font_size"
        android:textAllCaps="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="@drawable/bubble_white">

        <TextView
            android:id="@+id/helpfulTextTaskTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/helpful_text_padding_horizontal"
            android:paddingVertical="@dimen/helpful_text_padding_vertical"
            android:text="@string/taskTwoOrderLyrics"
            android:textSize="@dimen/helpful_text_font_size" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:flexWrap="wrap"
            app:alignItems="flex_start"
            app:alignContent="flex_start"
            app:flexDirection="row">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/textBubbleRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:hapticFeedbackEnabled="true" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/checkViewAnimation"
            android:layout_width="@dimen/success_animation_width"
            android:layout_height="@dimen/success_animation_height"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_rawRes="@raw/checkmarklightgreen"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <LinearLayout
            android:id="@+id/successTaskTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/great_text"
                android:textStyle="bold"
                android:textSize="@dimen/great_text_font_size"/>

            <Button
                android:id="@+id/continueButtonTaskTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/bubble"
                android:text="@string/continue_button"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>