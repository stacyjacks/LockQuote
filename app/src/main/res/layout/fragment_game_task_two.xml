<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_game_task_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameTaskTwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

    <TextView
        android:id="@+id/taskTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/taskTwo"
        android:textStyle="bold"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="4dp"
        android:gravity="center"
        android:text="hurrdurr"
        android:textColor="@color/whiteColor"
        android:background="@drawable/bubble_grey"
        android:hapticFeedbackEnabled="true"/>

    </LinearLayout>

</FrameLayout>